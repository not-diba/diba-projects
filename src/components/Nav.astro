---
import MobileNavItem from "./MobileNavItem.astro";
import NavIcon from "./NavIcon.astro";
import NavLink from "./NavLink.astro";
import Tooltip from "./Tooltip.astro";
import { Icon } from "astro-icon/components";

const { goBack } = Astro.props;
---

<nav
  id="default-nav"
  class="hidden fixed bottom-0 w-fit h-fit border-[1.2px] border-[#232323] rounded-[22px] z-1000 self-center mb-8 p-[3px] bg-[#0a090f]"
>
  <section
    class="flex gap-x-1 border-[1.2px] border-[#232323] rounded-[18px] p-[3px] items-center w-fit"
  >
    {
      goBack ? (
        <div>
          <Tooltip text={"Go back"} id="back">
            <NavLink label="Back" route="javascript:history.go(-1)" />
          </Tooltip>
        </div>
      ) : (
        <div>
          <Tooltip text="Kejani 🏠" id="home">
            <NavLink label="Home" route="/" />
          </Tooltip>
          <Tooltip text="My articles 📚" id="writing">
            <NavLink label="Writing" route="/writing/" />
          </Tooltip>
          <Tooltip text="My projects 💻" id="crafts">
            <NavLink label="Crafts" route="/crafts/" />
          </Tooltip>
        </div>
      )
    }
  </section>
  <section class="flex gap-x-2 pl-2 pr-18 items-center">
    <a
      href="https://github.com/not-diba"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Tooltip text="Most of my projects are hosted here" id="github">
        <NavIcon icon="github_line" hoverIcon="github_fill" />
      </Tooltip>
    </a>
    <a
      href="https://www.linkedin.com/in/madiba-elvis/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Tooltip text="I sometimes post my articles here as well" id="linkedIn">
        <NavIcon icon="linkedin_line" hoverIcon="linkedin_fill" />
      </Tooltip>
    </a>

    <a href="mailto:madibaelvis@gmail.com">
      <Tooltip text="Send me an email" id="mail">
        <NavIcon icon="mail_line" hoverIcon="mail_fill" />
      </Tooltip>
    </a>

    <div class="h-5/6 border-[#232323] border-l"></div>
    <Tooltip text="Buy me a coffee ?" id="coffee">
      <NavIcon icon="teacup_line" hoverIcon="teacup_fill" />
    </Tooltip>
  </section>
</nav>

<div
  id="mobile-nav"
  class="hidden w-4/5 h-fit fixed bottom-0 z-1000 mb-8 text-xl self-center"
>
  <nav
    class="border-[1.2px] border-[#232323] rounded-full bg-[#0a090f] flex w-full"
  >
    <div
      class="w-full bg-[#191919] h-[33px] m-[6px] rounded-full flex items-center justify-center py-[6px]"
    >
      {
        goBack ? (
          <div>
            <NavLink label="Back" route="javascript:history.go(-1)" />
          </div>
        ) : (
          <div>
            <div class="cursor-pointer" id="navToggle">
              {Astro.url.pathname == "/" && <NavLink label="Home" route="/" />}
              {Astro.url.pathname == "/writing/" && (
                <NavLink label="Writing" route="/writing" />
              )}
              {Astro.url.pathname == "/crafts/" && (
                <NavLink label="Crafts" route="/crafts" />
              )}
            </div>

            <div
              id="bottomSheet"
              class="fixed inset-x-0 bottom-0 z-3000 transform translate-y-full transition-transform duration-300 ease-in-out bg-[#0a090f] rounded-t-2xl shadow-lg min-h-[56vh] max-h-[100vh] overflow-y-auto border-[1.2px] border-[#232323]"
            >
              <div class="p-4">
                <div class="w-12 h-1 mx-auto mb-4 rounded-full bg-[#232323]" />
                <div class="flex flex-col gap-4">
                  <div class="border-[1.2px] border-[#232323] rounded-xl p-2 flex flex-col gap-4">
                    <MobileNavItem label="Home" route="/" icon="home_4_line" />
                    <MobileNavItem
                      label="Writing"
                      route="/writing"
                      icon="paper_line"
                    />
                    <MobileNavItem
                      label="Crafts"
                      route="/crafts"
                      icon="tool_line"
                    />
                  </div>
                  <div class="flex gap-2 w-full">
                    <a
                      href="https://github.com/not-diba"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <NavIcon icon="github_line" hoverIcon="github_fill" />
                    </a>

                    <a
                      href="https://www.linkedin.com/in/madiba-elvis/"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {" "}
                      <NavIcon icon="linkedin_line" hoverIcon="linkedin_fill" />
                    </a>

                    <NavIcon icon="teacup_line" hoverIcon="teacup_fill" />
                  </div>
                  <div class="h-5/6 border-[#232323] border-b" />
                  <div class="flex justify-between bg-[#191919] py-1.5 px-3 border border-[#232323] rounded-md">
                    <div class="flex gap-x-3 items-center pl-4 text-center text-white">
                      <p class="underline decoration-dotted">
                        <a href="mailto:madibaelvis@gmail.com">
                          madibaelvis@gmail.com
                        </a>
                      </p>
                    </div>
                    <div class="text-[#a6a6a2] px-3 text-center items-center rounded-md">
                      <Icon name="mail_line" class="text-xl" />
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div
              id="overlay"
              class="fixed inset-0 bg-gray-900/40 backdrop-blur-lg backdrop-filter pointer-events-none transition-all duration-300 ease-in-out z-2000 opacity-0"
              style="-webkit-backdrop-filter: blur(15px);"
            />
          </div>
        )
      }
    </div>
  </nav>
</div>

<script>
  window.mobileCheck = function () {
    let check = false;
    (function (a) {
      if (
        /(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|mobile.+firefox|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows ce|xda|xiino/i.test(
          a
        ) ||
        /1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r |s )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1 u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp( i|ip)|hs\-c|ht(c(\-| |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac( |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt( |\/)|klon|kpt |kwc\-|kyo(c|k)|le(no|xi)|lg( g|\/(k|l|u)|50|54|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-| |o|v)|zz)|mt(50|p1|v )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-| )|webc|whit|wi(g |nc|nw)|wmlb|wonu|x700|yas\-|your|zeto|zte\-/i.test(
          a.substr(0, 4)
        )
      )
        check = true;
    })(navigator.userAgent || navigator.vendor || window.opera);
    return check;
  };

  window.addEventListener("DOMContentLoaded", () => {
    const mobileNav = document.getElementById("mobile-nav");
    const defaultNav = document.getElementById("default-nav");
    if (window.mobileCheck()) {
      if (mobileNav) {
        mobileNav?.classList.remove("hidden");
        mobileNav?.classList.add("flex");
        defaultNav?.classList.add("hidden");
        defaultNav?.classList.remove("flex");
      }
    } else {
      if (defaultNav) {
        defaultNav?.classList.remove("hidden");
        defaultNav?.classList.add("flex");
        mobileNav?.classList.add("hidden");
        mobileNav?.classList.remove("flex");
      }
    }
  });

  // Wait for the DOM to be fully loaded
  document.addEventListener("DOMContentLoaded", () => {
    // Get elements
    const navToggle = document.getElementById("navToggle");
    const bottomSheet = document.getElementById("bottomSheet");
    const overlay = document.getElementById("overlay");

    // Flag to track if the sheet is open
    let isOpen = false;

    // Open bottom sheet
    function openBottomSheet(e) {
      // Prevent default behavior only for the toggle button
      e.preventDefault();
      e.stopPropagation(); // Stop event from bubbling up

      if (!isOpen) {
        bottomSheet.classList.remove("translate-y-full");
        overlay.classList.remove("opacity-0", "pointer-events-none");
        overlay.classList.add("opacity-50");
        isOpen = true;
      }
    }

    // Close bottom sheet
    function closeBottomSheet(e) {
      if (e && e.target === overlay) {
        e.preventDefault(); // Only prevent default for overlay clicks
      }

      if (isOpen) {
        bottomSheet.classList.add("translate-y-full");
        overlay.classList.add("opacity-0", "pointer-events-none");
        overlay.classList.remove("opacity-50");
        isOpen = false;
      }
    }

    // Add event listeners
    navToggle.addEventListener("click", openBottomSheet);
    overlay.addEventListener("click", closeBottomSheet);

    // Handle clicks inside the bottom sheet without preventing navigation
    bottomSheet.addEventListener("click", (e) => {
      // Only stop propagation for clicks that aren't on links
      if (e.target.tagName !== "A" && !e.target.closest("a")) {
        e.stopPropagation();
      }
      // Don't use preventDefault() here to allow links to work
    });

    // Allow closing the bottom sheet by dragging down
    let startY = 0;
    let currentY = 0;
    let isDragging = false;

    bottomSheet.addEventListener("touchstart", (e) => {
      // Don't start dragging if touching a link
      if (e.target.tagName === "A" || e.target.closest("a")) {
        return;
      }

      startY = e.touches[0].clientY;
      isDragging = true;
    });

    bottomSheet.addEventListener(
      "touchmove",
      (e) => {
        if (!isDragging) return;

        currentY = e.touches[0].clientY;
        const deltaY = currentY - startY;

        if (deltaY > 0) {
          e.preventDefault(); // Prevent scrolling when dragging down
          bottomSheet.style.transform = `translateY(${deltaY}px)`;
        }
      },
      { passive: false }
    );

    bottomSheet.addEventListener("touchend", (e) => {
      if (!isDragging) return;

      bottomSheet.style.transform = "";
      if (currentY - startY > 80) {
        closeBottomSheet();
      }

      isDragging = false;
    });

    // Close on escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isOpen) {
        closeBottomSheet();
      }
    });
  });
</script>
